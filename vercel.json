{
  "version": 2,
  "builds": [
    {
      "src": "Front End/dist/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/assets/(.*)", "dest": "/Front End/dist/assets/$1" },
    { "src": "/favicon.ico", "dest": "/Front End/dist/favicon.ico" },
    { "src": "/robots.txt", "dest": "/Front End/dist/robots.txt" },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|svg|ico|json))$",
      "dest": "/Front End/dist/$1"
    },

    { "src": "/api/(.*)", "dest": "/backend/server.js" },

    { "src": "/(.*)", "dest": "/Front End/dist/index.html" }
  ]
}
