{
  "version": 2,
  "builds": [
    { "src": "Front End/dist/**/*", "use": "@vercel/static" },
    { "src": "backend/server.js", "use": "@vercel/node" }
  ],
  "routes": [
    {
      "src": "/(assets|favicon.ico|robots.txt)/.*",
      "dest": "/Front End/dist/$1"
    },
    {
      "src": "/(.+\\.(js|css|png|jpg|jpeg|svg|ico|json))$",
      "dest": "/Front End/dist/$1"
    },

    { "src": "/api/(.*)", "dest": "/backend/server.js" },

    { "src": "/(.*)", "dest": "/Front End/dist/index.html" }
  ]
}
